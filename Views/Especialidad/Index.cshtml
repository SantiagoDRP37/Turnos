@model IEnumerable<Turnos.Models.Especialidad>
<body>
    <h1>Especialidades</h1>
    <table class="responsive-table highlight z-depth-3 orange lighten-5">
            <thead  class="blue darken-1 white-text">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th></th>
                </tr>  
            </thead>
            <tbody>
                @*Aqui colocamos, mas adelante el codigo para mostrat los registros de la base de datos *@
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion) 
                        </td>
                        <td class="row">
                            <a class="col s10 center" asp-action="Edit" asp-route-id="@item.IdEspecialidad"><i class=" material-icons">edit</i></a> 
                            <a class="col s2 " asp-action="Delete" asp-route-id="@item.IdEspecialidad"><i class="material-icons red-text">delete</a>
                        </td>
                    </tr>    
                }
            </tbody>
        </table>
        <p>
    <a class=" btn-floating btn-large green darken-1" asp-action="Create"><i class="material-icons">person_add</i></a>
</p>
</body>
        